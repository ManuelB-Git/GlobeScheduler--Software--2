<Page
    x:Class="GlobeScheduler___Software_2.DashBoard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GlobeScheduler___Software_2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DashBoard"
    Background="White"
    mc:Ignorable="d">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid Width="800" Height="450">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Content="Customer Records" />
                <Button
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Content="+ Add Customer" />

                <Border
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    BorderBrush="DarkGray"
                    BorderThickness="1">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Content="Customer Name*" />
                        <TextBox
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="10,0,10,0" />
                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            Content="Phone Number*" />
                        <TextBox
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="10,0,10,0" />
                        <Label
                            Grid.Row="4"
                            Grid.Column="0"
                            Content="Address*" />
                        <TextBox
                            Grid.Row="5"
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            Margin="10,0,10,10" />
                        <Border
                            Margin="5"
                            Grid.Row="0"
                            Grid.RowSpan="7"
                            Grid.Column="1"
                            BorderBrush="DarkGray"
                            BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Label
                                    Grid.Row="0"
                                    HorizontalAlignment="Left"
                                    Content="Recent Customer" />
                                <ListView Grid.Row="1" Margin="5" />
                            </Grid>
                        </Border>

                    </Grid>
                </Border>


                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Content="Appointments" />
                <Button
                    Grid.Row="2"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Content="+ Schedule Appointment" />
                <Border
                    Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    BorderBrush="DarkGray"
                    BorderThickness="1">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Content="Customer*" />
                        <ComboBox
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="10,0,10,0"
                            IsEditable="True"
                            Text="Select customer" />
                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            Content="Appointment Type*" />
                        <ComboBox
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="10,0,10,0"
                            IsEditable="True"
                            Text="Select type">
                            <ComboBoxItem Content="Consultation" />
                        </ComboBox>

                        <Label
                            Grid.Row="4"
                            Grid.Column="0"
                            Content="Date and Time*" />
                        <DatePicker
                            Grid.Row="5"
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            Margin="10,0,10,10" />
                        <Border
                            Margin="5"
                            Grid.Row="0"
                            Grid.RowSpan="7"
                            Grid.Column="1"
                            BorderBrush="DarkGray"
                            BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Label
                                    Grid.Row="0"
                                    HorizontalAlignment="Left"
                                    Content="Upcoming Appointments" />
                                <ListView Grid.Row="1" Margin="5" />
                            </Grid>
                        </Border>

                    </Grid>
                </Border>
            </Grid>
        </Viewbox>
    </Grid>
</Page>
