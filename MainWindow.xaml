<Window
    x:Class="GlobeScheduler___Software_2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GlobeScheduler___Software_2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="550"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>


        <DockPanel Grid.Column="1" HorizontalAlignment="Stretch">
            <Image
                Height="20"
                Margin="10"
                DockPanel.Dock="Left"
                Source="/Images/appointment_inverted.png" />
            <Label
                Content="Globe Scheduler"
                DockPanel.Dock="Left"
                Foreground="White" />
            <Menu HorizontalAlignment="Right">
                <MenuItem Tag="Dashboard" Header="Dashboard" Click="MenuItem_Click" />
                <MenuItem Header="Customers" Click="MenuItem_Click" />
                <MenuItem Header="Appointments" Click="MenuItem_Click"/>
                <MenuItem Header="Reports" Click="MenuItem_Click"/>

            </Menu>
        </DockPanel>

        <Frame
            NavigationUIVisibility="Hidden"
            x:Name="Main"
            Grid.Row="1"
            Margin="10" />
        <DockPanel Grid.Row="2" Margin="0">
            <Label
                HorizontalAlignment="Center"
                Content="2025 Globe Scheduler. All rights reserved"
                FontSize="10"
                Foreground="White" />
        </DockPanel>
    </Grid>
</Window>
