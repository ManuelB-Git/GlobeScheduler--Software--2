<Window
    x:Class="GlobeScheduler___Software_2.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GlobeScheduler___Software_2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginPage"
    Width="450"
    Height="600"
    MinWidth="300"
    MinHeight="400"
    mc:Ignorable="d">

    <Grid Background="White">
        <Viewbox
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Stretch="Uniform">
            <Grid Width="400" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  User Icon  -->
                <Image
                    Grid.Row="0"
                    Width="80"
                    Height="80"
                    Margin="0,20,0,10"
                    HorizontalAlignment="Center"
                    Source="/Images/user-icon.png"
                    Stretch="Uniform" />

                <!--  Title  -->
                <Label
                    Grid.Row="1"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    Content="Login"
                    FontSize="20"
                    FontWeight="Bold" />

                <!--  Username Label  -->
                <Label
                    Grid.Row="3"
                    Margin="0,0,0,5"
                    Content="Username" />

                <!--  Username TextBox  -->
                <TextBox
                    x:Name="Username_Text"
                    Grid.Row="4"
                    Margin="0,0,0,10"
                    Padding="8"
                    HorizontalAlignment="Stretch" />

                <!--  Password Label  -->
                <Label
                    Grid.Row="5"
                    Margin="0,0,0,5"
                    Content="Password" />

                <!--  PasswordBox  -->
                <PasswordBox
                    x:Name="Password_Text"
                    Grid.Row="6"
                    Margin="0,0,0,10"
                    Padding="8"
                    HorizontalAlignment="Stretch" />

                <!--  Language and Location Row  -->
                <StackPanel
                    Grid.Row="7"
                    Margin="0,10,0,10"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <ComboBox
                        Width="100"
                        Margin="0,0,10,0"
                        SelectedIndex="0">
                        <ComboBoxItem Content="English" />
                        <ComboBoxItem Content="Spanish" />
                        <ComboBoxItem Content="French" />
                    </ComboBox>
                    <Label VerticalAlignment="Center" Content="Location" />
                </StackPanel>

                <!--  Sign In Button  -->
                <Button
                    Grid.Row="9"
                    Width="150"
                    Height="35"
                    Margin="0,10,0,0"
                    Padding="10"
                    HorizontalAlignment="Center"
                    Click="Button_Click"
                    Content="Sign In" />
            </Grid>
        </Viewbox>
    </Grid>
</Window>
